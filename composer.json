{
    "name": "puli/symfony-bundle",
    "description": "Integrates the Puli library into the Symfony2 full-stack framework.",
    "homepage": "http://puli.io",
    "license": "MIT",
    "authors": [
        {
            "name": "Bernhard Schussek",
            "email": "bschussek@gmail.com"
        }
    ],
    "require": {
        "symfony/framework-bundle": "^2.7.3|^3.0.0",
        "symfony/dependency-injection": "^2.7.3|^3.0.0",
        "puli/composer-plugin": "^1.0-beta8",
        "puli/symfony-bridge": "^1.0-beta3"
    },
    "require-dev": {
        "symfony/twig-bundle": "^2.7.3|^3.0.0",
        "puli/twig-extension": "^1.0-beta7",
        "puli/discovery": "^1.0-beta8",
        "puli/cli": "^1.0-beta8",
        "phpunit/phpunit": "^4.6",
        "sebastian/version": "^1.0.1"
    },
    "minimum-stability": "dev",
    "suggest": {
        "puli/twig-extension": "Enables Puli support in Twig."
    },
    "autoload": {
        "psr-4": {
            "Puli\\SymfonyBundle\\": ""
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "support": {
        "issues": "https://github.com/puli/issues/issues"
    }
}
