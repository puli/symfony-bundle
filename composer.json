{
    "name": "puli/symfony-puli-bundle",
    "description": "Integrates the Puli library into the Symfony2 full-stack framework.",
    "license": "MIT",
    "authors": [
        {
            "name": "Bernhard Schussek",
            "email": "bschussek@gmail.com"
        }
    ],
    "require": {
        "symfony/symfony": "~2.3",
        "puli/puli": "~1.0@dev",
        "puli/composer-puli-plugin": "~1.0@dev",
        "puli/symfony-puli-bridge": "~1.0@dev",
        "puli/twig-puli-extension": "~1.0@dev"
    },
    "autoload": {
        "psr-4": {
            "Puli\\Extension\\Symfony\\PuliBundle\\": ""
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        },
        "puli": {
            "resources": {
                "/puli/symfony-puli-bundle": "Resources",
                "/symfony/framework-bundle": "@symfony/symfony:src/Symfony/Bundle/FrameworkBundle/Resources",
                "/symfony/security-bundle": "@symfony/symfony:src/Symfony/Bundle/SecurityBundle/Resources",
                "/symfony/twig-bundle": "@symfony/symfony:src/Symfony/Bundle/TwigBundle/Resources",
                "/symfony/web-profiler-bundle": "@symfony/symfony:src/Symfony/Bundle/WebProfilerBundle/Resources",
                "/sensio/distribution-bundle": "@sensio/distribution-bundle:Sensio/Bundle/DistributionBundle/Resources",
                "/sensio/framework-extra-bundle": "@sensio/framework-extra-bundle:Sensio/Bundle/FrameworkExtraBundle/Resources",
                "/sensio/generator-bundle": "@sensio/generator-bundle:Sensio/Bundle/GeneratorBundle/Resources"
            }
        }
    }
}
